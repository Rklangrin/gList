<div>
  <h2 class="center">Meals</h2>

  <% if logged_in? %>
    <div class="center">
      <%= link_to "Create New Meal", new_meal_path, class: "waves-effect waves-light btn" %>
      <%= link_to "Create New List", new_list_path, class: "waves-effect waves-light btn" %>
    </div>
  <% end %>
  

  <div class="row">
    <% @meals.each do |meal| %>
      <div class="col s12 m6 l4">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= meal.name %></span>
              <ul>
                <% meal.ingredients_array.each do |ingredient| %>
                  <li><%= ingredient[:name] %></li>
                  <ul>
                    <li>
                      <%= "#{ingredient[:quantity]} #{ingredient[:unit]}" %>
                    </li>
                  </ul>
                <% end %>
              </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  
</div>
